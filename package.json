{
  "name": "my-hono-workspace",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:backend": "bun run --cwd apps/server dev",
    "dev:frontend": "bun run --cwd apps/client dev",
    "dev:party": "bunx partykit dev party/index.ts",
    "build": "bun run --bun apps/server:build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "bun-types": "^1.3.1",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "partykit": "0.0.115"
  },
  "dependencies": {
    "better-auth": "^1.3.33",
    "hono": "^4.10.4",
    "partysocket": "1.1.6"
  }
}
